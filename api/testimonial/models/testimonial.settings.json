{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "name": "Testimonial"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "review": {
      "type": "text"
    },
    "reviewImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
