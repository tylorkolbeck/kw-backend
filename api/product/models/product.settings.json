{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "productType": {
      "type": "enumeration",
      "enum": [
        "Strategy",
        "Signal",
        "Trend",
        "Template"
      ]
    },
    "features": {
      "type": "richtext"
    },
    "requirements": {
      "type": "richtext"
    },
    "setup": {
      "type": "richtext"
    },
    "exchange": {
      "type": "string"
    },
    "price": {
      "type": "float"
    },
    "recommendedBalance": {
      "type": "string"
    },
    "riskLevel": {
      "type": "string"
    },
    "automated": {
      "type": "boolean"
    },
    "cryptoHopperLink": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    }
  }
}
